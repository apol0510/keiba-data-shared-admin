            kyusya = `(${syozoku})${trainerName}`;
          } else {
            kyusya = kyusyaTd.textContent?.trim() || '';
          }
        }
      }

      if (number === 0 || !name) {
        return null;
      }

      return {
        number,
        name,
        umacd,
        marks,
        seirei,
        kisyu,
        kinryo,
        kyusya,
      };
    }

