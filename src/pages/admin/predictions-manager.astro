      const table = doc.querySelector("table.default.syutuba");
      if (!table) {
        return { success: false, errors: ["å‡ºé¦¬è¡¨ãƒ†ãƒ¼ãƒ–ãƒ«ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“"], horses: [], predictors: [] };
