      }

      // äºˆæƒ³è€…åˆ—ã‚’æ¤œå‡º
      const predictors = [];
      headerRow.querySelectorAll("th").forEach(th => {
        const text = th.textContent.trim();
        if (text.includes("My") || text === "CPU" || (text.length <= 3 && text.length > 0)) {
